  "version": "0.2.0",
  "configurations": [
    {
      "name": "Docker FastAPI Debug",
      "type": "python",
      "request": "attach",
      "host": "0.0.0.0",
      "port": 5678,
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/app"
        }
      ],
      "justMyCode": false
    },
    {
      "name": "Local FastAPI Debug",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "env": {
        "PIG_INSPECTIONS_DB_HOST": "localhost",
        "PIG_INSPECTIONS_DB_PORT": "27017",
        "PIG_INSPECTIONS_DB_USER": "root",
        "PIG_INSPECTIONS_DB_PASS": "password",
        "PIG_INSPECTIONS_DB_NAME": "pig-inspections"
      },
      "args": ["main:app", "--port", "8080", "--reload"],
      "justMyCode": false
    },
    {
      "name": "FastAPI Testing",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/venv/bin/pytest",
      "env": {
        "PIG_INSPECTIONS_DB_HOST": "localhost",
        "PIG_INSPECTIONS_DB_PORT": "27017",
        "PIG_INSPECTIONS_DB_USER": "root",
        "PIG_INSPECTIONS_DB_PASS": "password",
        "PIG_INSPECTIONS_DB_NAME": "pig-inspections"
      },
      "console": "integratedTerminal",
      "args": ["tests/data_input/test_data_input_upload_data.py"],
      "justMyCode": false
    }
  ]
}
